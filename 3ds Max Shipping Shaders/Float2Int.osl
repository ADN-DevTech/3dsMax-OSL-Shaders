shader Float2Int
[[ string help = "Turns a float into an integer",
   string label= "Float-to-Int",
   string category = "Math\Float" ]]
(
	float  Input = 0.0,
	string Mode = "floor" 
		[[ string widget="popup",
		   string options="floor|ceil|round|trunc",
		   string help = "One of 'floor', 'ceil', 'round' or 'trunc' conversion modes." ]],
	output int Out = 0,
)
{
	if (Mode == "ceil")
		Out = int(ceil(Input));
	else 
	if (Mode == "round")
		Out = int(round(Input));
	else
	if (Mode == "trunc")
		Out = int(trunc(Input));
	else	
		Out = int(floor(Input));
}
