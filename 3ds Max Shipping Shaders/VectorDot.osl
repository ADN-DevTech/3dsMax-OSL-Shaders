shader VectorDot
[[ string help     = "Dot Product between two vectors",
   string label    = "Dot Product (vector)",
   string category = "Math\Vector" ]]
(
	vector A = 0.5 [[ string label = "A" ]],
	vector B = 0.5 [[ string label = "B" ]],

	output float Out = 0.0,
)
{
	Out = dot(A, B);
}
