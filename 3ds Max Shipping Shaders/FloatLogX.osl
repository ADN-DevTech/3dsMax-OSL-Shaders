shader FloatLogX
[[ string help = "Computes log<sub>base</sub> x",
   string label= "LogX",
   string category = "Math\Float" ]]
(
	float Input = 0.0,
	float Base  = 10.0,
	output float Out = 0.0,
)
{
	Out = log(Input, Base);
}
