shader FloatRecip
[[ string help = "Reciprocates a float number (1.0 / Input)",
   string label = "Reciprocal", 
   string category = "Math\Float" ]]
(
	float Input = 0.0,
	output float Out = 0.0,
)
{
	Out = 1.0 / Input;
}
