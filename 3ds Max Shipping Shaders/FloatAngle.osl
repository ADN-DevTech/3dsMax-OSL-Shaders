shader FloatAngle
[[ string help = "Angle (in radians) of 2D Vector",
   string label= "Angle",
   string category = "Math\Float" ]]
(
	float X = 0.0,
	float Y = 0.0,
	output float Out = 0.0 [[ string label="Angle (radians)" ]],
)
{
	Out = atan2(X, Y);
}
