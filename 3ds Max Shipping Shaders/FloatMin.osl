shader FloatMin
[[ string help = "Returns the minimum of two floats",
   string label= "Mininimum",
   string category = "Math\Float" ]]
(
	float A = 0.5,
	float B = 0.5,
	output float Out = 0.0,
)
{
	Out = min(A, B);
}