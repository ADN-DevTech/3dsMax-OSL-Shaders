shader VectorDist
[[ string help     = "Distance between two points",
   string label    = "Distance (vector)",
   string category = "Math\Vector" ]]
(
	vector A = 0.0,
	vector B = 0.0,
	output float Out = 0.0,
)
{
	Out = distance(A, B);
}
