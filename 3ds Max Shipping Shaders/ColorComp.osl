shader ColorComp
[[ string help = "Inverts (Complements) a color number (1 - Input)",
   string label= "Invert (color)",
   string category = "Math\Color" ]]
(
	color Input = 0.0,
	output color Out = 0.0,
)
{
	Out = 1 - Input;
}
