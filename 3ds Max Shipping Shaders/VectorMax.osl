shader VectorMax
[[ string help = "Returns the maximum of two vectors",
   string label= "Max (vector)",
   string category = "Math\Vector" ]]
(
	vector A = 0.5,
	vector B = 0.5,
	output vector Out = 0.0,
)
{
	Out = max(A, B);
}