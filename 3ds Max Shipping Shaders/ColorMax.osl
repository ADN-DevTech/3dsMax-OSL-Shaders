shader ColorMax
[[ string help = "Returns the maximum of two colors",
   string label= "Max (color)",
   string category = "Math\Color" ]]
(
	color A = 0.5,
	color B = 0.5,
	output color Out = 0.0,
)
{
	Out = max(A, B);
}