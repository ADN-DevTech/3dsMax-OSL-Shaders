shader LiftGammaGain
[[ string help = "Simple Lift / Gamma / Gain color modifier",
   // string category = "Color Correction",
   string label = "Lift/Gamma/Gain" ]]
(
	color Input = 0.0,
	float Lift = 0.0,
	float Gamma = 1.0,
	float Gain = 1.0,
	output color Col = 0.0
)
{
	Col = Lift + pow(Input, Gamma) * Gain;
}
