shader FloatPow
[[ string help = "Raise a float to another: A<sup>B</sup>",
   string label= "Power",
   string category = "Math\Float" ]]
(
	float A = 0.0 [[ string label = "A (base)" ]],
	float B = 0.0 [[ string label = "B (exponent)" ]],
	output float Out = 0.0,
)
{
	Out = pow(A, B);
}
