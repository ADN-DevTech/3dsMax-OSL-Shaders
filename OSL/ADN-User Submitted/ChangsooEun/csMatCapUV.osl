// MapCatUV generator
// By Changsoo Eun

shader MatcapUV
[[ string help = "MatCapUV Generator by Changsoo Eun",
   string label= "MapCatUV",
   string category = "UVW" ]]
(
	output vector UVW = 0.0
)

{
	vector cameraSpaceN = transform ("camera", N); 
	UVW = cameraSpaceN *0.5 + 0.5;
}