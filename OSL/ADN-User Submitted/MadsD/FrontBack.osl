shader FrontBack
	[[
	string category = "MDShaders" 
	]]
(
	color Front = color(1,0,0),
	color Back  = color(0,1,0),
	
	output color Out = 0
)
{
	if (backfacing())
	Out = Back;
	else
	Out = Front;
}
